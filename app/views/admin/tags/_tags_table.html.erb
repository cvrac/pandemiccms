<div class="columns">
  <div class="column">
    <%= form_with(method: :get, html: { class: 'smart-table-search', 'data-target' => 'tags-smart-table' }) do |t| %>
    <div class="field has-addons">
      <div class="control is-expanded">
        <input type="text" name="search" placeholder="<%= _('Search...') %>" class="input" value="<%= params[:search] %>" />
      </div>
      <div class="control">
        <button type="submit" class="button is-success">
          <i class="fas fa-search"></i>
          &nbsp;
          <%= _('Search') %>
        </button>
      </div>
    </div>
  </div>
  <div class="column has-text-right-tablet">
    <a class="button is-success" href="<%= new_admin_tag_path %>">
      <%= _('Create') %>
      &nbsp;
      <i class="fas fa-plus"></i>
    </a>
  </div>
</div>
<% end %>
<table class="table is-bordered is-striped is-narrow is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th><%= render partial: 'admin/shared/table_header', locals: { field: 'name', title: _('Name') } %></th>
      <th><%= render partial: 'admin/shared/table_header', locals: { field: 'posts_count', title: _('Total Posts') } %></th>
      <th><%= render partial: 'admin/shared/table_header', locals: { field: 'pages_count', title: _('Total Pages') } %></th>
      <th><%= render partial: 'admin/shared/table_header', locals: { field: 'created_at', title: _('Created At') } %></th>
      <th><%= render partial: 'admin/shared/table_header', locals: { field: 'updated_at', title: _('Updated At') } %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% if @tags.none? %>
    <tr>
      <td colspan="6"><%= _('No tags were found.') %></td>
    </tr>
    <% else %>
    <% @tags.each do |tag| %>
    <tr>
      <td><%= tag.name %></td>
      <td><%= tag.posts_count %></td>
      <td><%= tag.pages_count %></td>
      <td><%= tag.created_at %></td>
      <td><%= tag.updated_at %></td>
      <td>
        <a class="button is-link is-small mb-1" href="<%= admin_tag_path(tag) %>">
          <i class="fas fa-eye"></i>
          &nbsp;
          <%= _('View') %>
        </a>
        <a class="button is-success is-small mb-1" href="<%= edit_admin_tag_path(tag) %>">
          <i class="fas fa-edit"></i>
          &nbsp;
          <%= _('Edit') %>
        </a>
        <button type="button" class="button is-danger is-small mb-1" data-modal-open="delete-tag-modal<%= tag.id %>">
          <i class="fas fa-trash"></i>
          &nbsp;
          <%= _('Delete') %>
        </button>
        <%= form_with(url: admin_tag_path(tag), method: :delete, id: "delete-tag-modal#{tag.id}", class: 'modal') do %>
        <div class="modal-background cancel"></div>
        <div class="modal-card">
          <div class="modal-card-head">
            <p class="modal-card-title"><%= _('Delete Confirmation') %></p>
            <button type="button" class="delete cancel" aria-label="close"></button>
          </div>
          <div class="modal-card-body">
            <p><%= _('Are you sure you want to delete this tag ?') %></p>
          </div>
          <div class="modal-card-foot">
            <button type="button" class="button cancel"><%= _('No') %></button>
            <button type="submit" class="button is-success"><%= _('Yes') %></button>
          </div>
        </div>
        <% end %>
      </td>
    </tr>
    <% end %>
    <% end %>
  </tbody>
</table>
<%= paginate @tags %>