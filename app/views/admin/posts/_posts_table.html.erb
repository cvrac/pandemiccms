<% parameters = request.query_parameters.merge(request.parameters.slice(:user_id, :tag_id, :category_id)) %>
<% if params[:hide_status_filter].blank? %>
<div class="buttons toolbar has-addons is-inline-flex mr-4">
  <a href="<%= admin_posts_path(parameters.except(:status)) %>" class="button<%= ' is-success is-selected' if params[:status].blank? %>"><%= _('All|Posts') %></a>
  <a href="<%= admin_posts_path(parameters.merge(status: :draft)) %>" class="button<%= ' is-success is-selected' if params[:status] == 'draft' %>"><%= _('Only drafts|Posts') %></a>
  <a href="<%= admin_posts_path(parameters.merge(status: :published)) %>" class="button<%= ' is-success is-selected' if params[:status] == 'published' %>"><%= _('Only published|Posts') %></a>
</div>
<% end %>
<% if params[:hide_user_filter].blank? %>
<div class="buttons toolbar has-addons is-inline-flex">
  <a href="<%= admin_posts_path(parameters.except(:user_id)) %>" class="button<%= ' is-success is-selected' if params[:user_id].blank? %>"><%= _('All|Posts') %></a>
  <a href="<%= admin_posts_path(parameters.merge(user_id: current_admin_user.id)) %>" class="button<%= ' is-success is-selected' if params[:user_id] == current_admin_user.id.to_s %>"><%= _('Only my posts') %></a>
</div>
<% end %>
<div class="columns is-multiline">
  <div class="column is-full-tablet is-half-desktop">
    <%= form_with(method: :get, html: { class: 'smart-table-search field has-addons', 'data-target' => 'posts-smart-table' }) do |t| %>
    <input type="hidden" name="hide_actions" value="<%= params[:hide_actions] %>" />
    <input type="hidden" name="hide_status_filter" value="<%= params[:hide_status_filter] %>" />
    <input type="hidden" name="hide_user_filter" value="<%= params[:hide_user_filter] %>" />
    <input type="hidden" name="status" value="<%= params[:status] %>" />
    <input type="hidden" name="tag_id" value="<%= params[:tag_id] %>" />
    <input type="hidden" name="category_id" value="<%= params[:category_id] %>" />
    <input type="hidden" name="user_id" value="<%= params[:user_id] %>" />
    <div class="control is-expanded">
      <input type="text" name="search" placeholder="<%= _('Search...') %>" class="input" value="<%= params[:search] %>" />
    </div>
    <div class="control">
      <button type="submit" class="button is-success" title="<%= _('Search') %>">
        <i class="fas fa-search"></i>
      </button>
    </div>
    <% end %>
  </div>
  <% if params[:hide_actions].blank? %>
  <div class="column has-text-right-tablet">
    <a class="button is-success" href="<%= new_admin_post_path %>">
      <%= _('Create') %>
      &nbsp;
      <i class="fas fa-plus"></i>
    </a>
  </div>
  <% end %>
</div>
<table class="table is-striped is-hoverable is-fullwidth mt-2">
  <thead>
    <tr>
      <th><%= render partial: 'admin/shared/table_header', locals: { field: 'name', title: _('Name') } %></th>
      <th class="is-hidden-mobile"><%= _('Status') %></th>
      <th class="is-hidden-touch"><%= render partial: 'admin/shared/table_header', locals: { field: 'created_at', title: _('Created At') } %></th>
      <th class="is-hidden-touch"><%= render partial: 'admin/shared/table_header', locals: { field: 'updated_at', title: _('Updated At') } %></th>
      <th class="actions-cell<%= ' is-hidden' if params[:hide_actions].present? %>"></th>
    </tr>
  </thead>
  <tbody>
    <% if @posts.none? %>
    <tr>
      <td colspan="5"><%= _('No posts were found.') %></td>
    </tr>
    <% else %>
    <% @posts.each do |post| %>
    <tr>
      <td>
        <a href="<%= admin_post_path(post) %>"><%= post.name %></a>
      </td>
      <td class="is-hidden-mobile"><%= post.draft? ? _('Draft|Post') : _('Published|Post') %></td>
      <td class="is-hidden-touch"><%= post.created_at %></td>
      <td class="is-hidden-touch"><%= post.updated_at %></td>
      <td class="actions-cell<%= ' is-hidden' if params[:hide_actions].present? %>">
        <div class="dropdown is-togglable is-right">
          <div class="dropdown-trigger">
            <a href="javascript:void(0)" aria-haspopup="true" aria-controls="dropdown-menu" title="<%= _('Actions') %>">
              <i class="fas fa-ellipsis-v"></i>
            </a>
          </div>
          <%= render partial: 'admin/posts/dropdown_menu', locals: { post: post } %>
        </div>
      </td>
    </tr>
    <% end %>
    <% end %>
  </tbody>
</table>
<%= paginate @posts %>

<% @posts.each do |post| %>
<%= render partial: 'admin/posts/delete_modal', locals: { post: post } %>
<%= render partial: 'admin/posts/publish_modal', locals: { post: post } %>
<% end %>