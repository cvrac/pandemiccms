<% client_cache ['Author', current_locale, model.author_id] do %>
<% translated_author = model.author.translate(current_locale, use_defaults: true) %>
<hr />
<section class="mb-5">
  <h3 class="title is-4"><%= _('Author') %></h3>
  <div class="columns">
    <div class="column is-narrow">
      <% if model.author.image.attached? %>
      <img src="<%= rails_representation_url(model.author.image.variant(resize_to_limit: [200, 200])) %>" width="200" height="200"
           alt="<%= translated_author.full_name %>" loading="lazy" />
      <% else %>
      <span class="no-image"></span>
      <% end %>
    </div>
    <div class="column">
      <h4 class="title is-5"><%= translated_author.full_name %></h4>
      <p><%= translated_author.description %></p>
    </div>
  </div>
</section>
<% end %>